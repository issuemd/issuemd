{
  "name": "issuemd",
  "version": "0.0.0-alpha1",
  "description": "issue tracking in hand",
  "main": "src/issuemd-core",
  "scripts": {
    "start": "npm run format && npm run lint && npm run test && npm build",
    "format": "js-beautify -r src/*.js test/*.js",
    "lint": "jshint src test",
    "test": "./node_modules/minijasminenode/bin/minijn test/*.unit.js",
    "test:dist": "ENVIRONMENT=dist npm test",
    "build": "npm run build:parser && browserify --standalone issuemd src/issuemd-core.js | uglifyjs -o issuemd.min.js",
    "build:parser": "pegjs < src/issuemd-parser.pegjs | uglifyjs > issuemd-parser.min.js",
    "bump": "npm run bump:patch",
    "bump:major": "npm --no-git-tag-version version major",
    "bump:minor": "npm --no-git-tag-version version minor",
    "bump:patch": "npm --no-git-tag-version version patch",
    "update": "updtr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/issuemd/issuemd.git"
  },
  "keywords": [
    "distributed",
    "issue",
    "tracking",
    "issuemd"
  ],
  "author": "Billy Moon (billy@issue.md)",
  "contributors": [
    {
      "name": "Luka Siric",
      "email": "luka@issue.md"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/issuemd/issuemd/issues"
  },
  "homepage": "https://github.com/issuemd/issuemd",
  "dependencies": {
    "marked": "^0.3.2",
    "mustache": "^2.2.0"
  },
  "devDependencies": {
    "blueimp-md5": "^1.1.1",
    "browserify": "^12.0.1",
    "chance": "^0.7.6",
    "js-beautify": "^1.5.10",
    "jshint": "^2.9.1-rc1",
    "minijasminenode": "1.1.1",
    "pegjs": "^0.9.0",
    "uglify-js": "^2.6.1",
    "updtr": "^0.1.5"
  }
}
