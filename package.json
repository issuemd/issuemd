{
  "name": "issuemd",
  "version": "2.0.0",
  "description": "issue tracking in hand",
  "main": "dist/issuemd.js",
  "scripts": {
    "test": "./node_modules/minijasminenode/bin/minijn test/*.unit.js",
    "test:dist": "ENVIRONMENT=dist npm test",
    "build": "npm run build:parser && ./node_modules/browserify/bin/cmd.js --standalone issuemd src/issuemd-core.js --outfile dist/issuemd.js",
    "build:parser": "./node_modules/pegjs/bin/pegjs src/parser.pegjs dist/parser.js",
    "bump": "npm run bump:patch",
    "bump:major": "npm --no-git-tag-version version major",
    "bump:minor": "npm --no-git-tag-version version minor",
    "bump:patch": "npm --no-git-tag-version version patch",
    "update": "updtr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/issuemd/issuemd.git"
  },
  "keywords": [
    "distributed",
    "issue",
    "tracking",
    "issuemd"
  ],
  "author": "Billy Moon (billy@issue.md)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/issuemd/issuemd/issues"
  },
  "homepage": "https://github.com/issuemd/issuemd",
  "dependencies": {
    "marked": "^0.3.2",
    "mustache": "^2.2.0"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "chance": "^0.7.6",
    "minijasminenode": "1.1.1",
    "pegjs": "^0.9.0",
    "updtr": "^0.1.5"
  }
}
