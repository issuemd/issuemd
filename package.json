{
  "name": "issuemd",
  "version": "0.1.7",
  "description": "issue tracking in hand",
  "main": "issuemd.min.js",
  "scripts": {
    "start": "npm run format && npm run lint && npm run test:cover && npm run build",
    "format": "bash -c \"js-beautify -f src/*.js src/*/*.js test/*.js -r\"",
    "lint": "jshint src test",
    "test": "bash -c \"minijasminenode --noStack --verbose test/*.unit.js\"",
    "test:dist": "bash -c \"ENVIRONMENT=dist npm test\"",
    "test:cover": "bash -c \"istanbul cover --print none --report none --dir reports/coverage -- node_modules/minijasminenode/bin/minijn --noStack --verbose test/*.unit.js\" && istanbul report --root reports/coverage text",
    "build": "npm run build:parser && browserify -t aliasify -t brfs -t browserify-versionify --standalone issuemd src/issuemd.js | uglifyjs -o issuemd.min.js",
    "build:parser": "pegjs < src/parser/issuemd-parser.pegjs | uglifyjs > issuemd-parser.min.js",
    "update": "updtr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/issuemd/issuemd.git"
  },
  "keywords": [
    "distributed",
    "issue",
    "tracking",
    "issuemd"
  ],
  "author": "Billy Moon (billy@issue.md)",
  "contributors": [
    {
      "name": "Luka Siric",
      "email": "luka@issue.md"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/issuemd/issuemd/issues"
  },
  "homepage": "https://github.com/issuemd/issuemd",
  "aliasify": {
    "aliases": {
      "./parser/issuemd-parser-builder.js": "./issuemd-parser.min.js"
    }
  },
  "tonicExampleFilename": ".tonic.js",
  "dependencies": {},
  "devDependencies": {
    "aliasify": "^1.8.0",
    "blueimp-md5": "^2.1.0",
    "brfs": "^1.4.1",
    "browserify": "^12.0.1",
    "browserify-versionify": "^1.0.6",
    "chance": "^0.8.0",
    "istanbul": "^0.4.1",
    "js-beautify": "^1.5.10",
    "jshint": "^2.9.1-rc1",
    "marked": "^0.3.2",
    "minijasminenode": "1.1.1",
    "mustache": "^2.2.0",
    "pegjs": "^0.9.0",
    "uglify-js": "^2.6.1",
    "updtr": "^0.1.5"
  }
}
